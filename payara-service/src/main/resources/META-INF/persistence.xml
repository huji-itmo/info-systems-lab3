<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0">

    <persistence-unit name="my-pu" transaction-type="JTA">
        <jta-data-source>java:app/jdbc/studsDS</jta-data-source>
        <class>org.example.shared.model.SpaceMarine</class>
        <class>org.example.shared.model.Coordinates</class>
        <class>org.example.shared.model.Chapter</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- Prevent EM holding connections between transactions -->
            <property name="eclipselink.jdbc.cache-statements" value="false"/>
            <property name="eclipselink.jdbc.batch-writing" value="JDBC"/>

            <!-- Enable shared cache globally -->
            <property name="eclipselink.cache.shared.default" value="true"/>

            <!-- Default cache type for ALL @Cacheable entities -->
            <property name="eclipselink.cache.type.default" value="FULL"/>

            <!-- Default cache size (entities) -->
            <property name="eclipselink.cache.size.default" value="1000"/>

            <!-- Default expiration (milliseconds) -->
            <property name="eclipselink.cache.expiry.default" value="3600000"/>

            <!-- Crucial for Payara: Disable EclipseLink weaving warnings -->
            <property name="eclipselink.weaving" value="static"/>

            <!-- <property name="eclipselink.cache.shared.default" value="true" /> -->
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
            <property name="eclipselink.ddl-generation.output-mode" value="database" />
        </properties>
    </persistence-unit>
</persistence>
