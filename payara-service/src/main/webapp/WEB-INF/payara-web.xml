<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE payara-web-app PUBLIC "-//Payara.fish//DTD Payara Server 5 Servlet 4.0//EN" "https://raw.githubusercontent.com/payara/Payara-Server-Documentation/master/docs/modules/ROOT/pages/schemas/payara-web-app_5.dtd">
<payara-web-app>
    <context-root>/file-service</context-root>

    <!-- CRITICAL: Enable Payara's cache coordination -->
    <class-loading delegate="false"/>
    <parameter-encoding default-charset="UTF-8"/>

    <!-- Enable distributed caching (Hazelcast) -->
    <distributed-caching enabled="true">
        <cache-name>org.example.shared.model.*</cache-name>
        <backup-count>1</backup-count>
    </distributed-caching>
</payara-web-app>